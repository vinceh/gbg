<%= javascript_include_tag "jquery.customSelect.min" %>

<div class="hero">
  <div class="container">
    <div class="title">
      discover boardgames
      <br>that you'll love
    </div>
    <div class="hero-select">
      <select id="catSelect">
        <option value="0">All Games</option>
        <%= Boardgame.categories.each_with_index do |c, i| %>
          <option value="<%= i+1 %>"><%= c %> Games</option>
        <% end  %>
      </select>
      <button>GO!</button>
    </div>
  </div>
</div>
<div class="second-hero">
  <div class="container">
    <div class="lesser-header">
      <hr>
      <h1>begin your discovery in...</h1>
    </div>
  </div>

  <div class="container categories">
    <a class="cat-link" href="/boardgames/#/?releaseDate=1">
      <div>
        <div>new & hot</div>
        <div class="cat-img">
          <%= image_tag "hot.png" %>
        </div>
      </div>
    </a>
    <a class="cat-link" href="/boardgames/#/?time=45">
      <div>
        <div>short & sweet</div>
        <div class="cat-img">
          <%= image_tag "time.png" %>
        </div>
      </div>
    </a>
    <a class="cat-link" href="/boardgames/#/?players=9">
      <div>
        <div>gather the troops!</div>
        <div class="cat-img">
          <%= image_tag "troop.png" %>
        </div>
      </div>
    </a>
    <a class="cat-link" href="/boardgames/#/?players=2">
      <div>
        <div>2 player showdown</div>
        <div class="cat-img">
          <%= image_tag "showdown.png" %>
        </div>
      </div>
    </a>
    <a class="cat-link" href="/boardgames/#/?noCats=Adventure,Ancient%2FMythology,Card%2FClassic,Economic%2FPolitical,Fantasy%2FSci%2DFi,Medieval%2FCultural,Miniatures%2FExpansions,War">
      <div>
        <div>good for family</div>
        <div class="cat-img">
          <%= image_tag "family.png" %>
        </div>
      </div>
    </a>
    <a class="cat-link">
      <div>
        <div>it's party time</div>
        <div class="cat-img">
          <%= image_tag "party.png" %>
        </div>
      </div>
    </a>
  </div>
</div>

<div class="bg-hero">
  <div class="container">
    <div class="lesser-header">
      <hr>
      <h1>popular boardgames</h1>
    </div>
  </div>

  <div class="container">
    <% @bgs.each do |b| %>
      <div class="bg">
        <div class="bg-img">
          <%= image_tag b.image_url %>
        </div>
        <div class="bg-info">
          <div>
            <h2> <%= link_to b.name+" ("+b.year_published+")", :controller => :boardgames, :action => :detail, :id => b.id %></h2>
            <p><%= raw b.desc.first(240) %>...</p>
            <table>
              <tr>
                <td class="title"> age </td>
                <td> <%= b.age %>+ </td>
                <td class="title"> geek score </td>
                <td> <%= b.gbg_rating %> </td>
              </tr>
              <tr>
                <td class="title"> mechanic </td>
                <td> <%= b.mechanic %> </td>
                <td class="title"> category </td>
                <td> <%= Boardgame.category_map[b.category] %> </td>
              </tr>
              <tr>
                <td class="title"> players </td>
                <td> <%= b.num_players %> </td>
                <td class="title"> time </td>
                <td> <%= b.playing_time %> min </td>
              </tr>
            </table>
            <a target="_blank" href="<%= b.amazon_url %>" class="btn">buy for <%= b.price %> <%= image_tag "Amazon-Logo.png" %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

